@using DUTC.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@if (SignInManager.IsSignedIn(User)){
        @if (User.IsInRole("Admin"))
        {
            <li class="d_none"><a  asp-action="Index" asp-controller="Admin" title="Manage"><i class="fa fa-user" aria-hidden="true"></i></a></li>
        }
        else
        {
            <li class="d_none"><a  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-user" aria-hidden="true"></i></a></li>
        }
    @*<li class="d_none"><a  href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>*@
    <li class="d_none"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="" id="btnModalSearch"><i class="fa fa-search" aria-hidden="true"></i></button></li>

    <li>
        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn btn-outline-primary" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li class="d_none"><a asp-area="Identity" asp-page="/Account/Login" title="Manage"><i class="fa fa-user" aria-hidden="true"></i></a></li>
  @*  <li class="d_none"><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>*@
    <li class="d_none"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="" id="btnModalSearch"><i class="fa fa-search" aria-hidden="true"></i></button></li>

}
